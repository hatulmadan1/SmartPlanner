<Application x:Class="UI_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UI_WPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="SmartPlanner">
            <Setter Property="Control.FontSize" Value="16"/>
            <Setter Property="Control.Foreground" Value="#4b0082"/>
            <Setter Property="Control.FontWeight" Value="DemiBold"/>
            <Setter Property="Window.Background" Value="#e6e6fa"/>
        </Style>
        <Style TargetType="Button" x:Key="SmartPlannerButton">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Foreground" Value="#4b0082"/>
            <Setter Property="Background" Value="#d8bfd8" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4b0082"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
